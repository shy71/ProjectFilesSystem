<UserControl x:Class="FMS_GUI.FolderIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             BorderThickness="2" BorderBrush="Transparent" Width="75" Height="75" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Image Source="Pic\Folder.jpg" Stretch="Uniform" Grid.Column="0" ToolTip="Disk" Grid.Row="0" Margin="5,0,0,0"/>
        <Label x:Name="name" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Content="Folder1" Margin="0,45,0,0" Grid.RowSpan="2"/>


    </Grid>
</UserControl>
