<Window x:Class="FMS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="232*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <!--Button Grid.Column="0" ToolTip="Create new disk" Click="NewDisk_Click">
                <Image Source="Pic\New Disk1.png" Stretch="Uniform"/>     
            </-->

            <Menu Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" Margin="0,0,0,-45" VerticalAlignment="Top" Width="517">
                <MenuItem Header="_File" Width="37">
                    <MenuItem x:Name="CreteDskMenu" Header="_Create Disk" Click="CreteDskMenu_Click">
                        <MenuItem.Icon>
                            <Image Source="Pic\New Disk1.png" />
                        </MenuItem.Icon>
                        
                    </MenuItem>
                </MenuItem>
                <MenuItem x:Name="SelectedItemProperties" Header="_Properties" HorizontalAlignment="Right" Width="70" Click="SelectedItemProperties_Click"/>
                <MenuItem x:Name="SelectedItemOpen" Header="_Open" HorizontalAlignment="Right" Width="45" Click="OpenDisk"/>
                <MenuItem x:Name="SelectedItemClose" Header="_Close" HorizontalAlignment="Right" Width="45" Click="SelectedItemClose_Click"/>
            </Menu>
        </Grid>
        <ListBox x:Name="myList" Grid.Row="2" />
    </Grid>
</Window>
