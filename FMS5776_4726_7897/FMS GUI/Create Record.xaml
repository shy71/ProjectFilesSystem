<Window x:Class="FMS_GUI.Create_Record"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create_Record" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="Fields" Grid.Row="0"/>
        <Button x:Name="AddField" Grid.Row="1" Content="+" Click="AddField_Click" Margin="0,0,248,0"/>
        <Button x:Name="Done" Grid.Row="1" Content="Done with record" Click="Done_Click" Margin="89,0,0,0"/>
        <Button x:Name="EraseField" Grid.Row="1" Content="-" Click="EraseField_Click" Margin="45,0,203,0"/>
    </Grid>
</Window>
